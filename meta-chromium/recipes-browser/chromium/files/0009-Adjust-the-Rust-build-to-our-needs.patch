       ]
-      deps = [ ":prebuilt_rustc_copy_to_sysroot" ]
+      deps = [
+        ":prebuilt_rustc_copy_to_sysroot",
+        ":prebuilt_rustc_copy_target_json_to_sysroot",
+      ]
     }
   }
 }
