+		nanojit/Native$(NANOJIT_ARCH).h \
+		nanojit/njconfig.h	\
+		nanojit/njcpudetect.h	\
+		nanojit/RegAlloc.h	\
+		nanojit/nanojit.h	\
 		VMPI.h		\
 		Writer.h	\
 		$(NULL)
@@ -545,7 +546,11 @@ else
 CPPSRCS += pm_stub.cpp
 endif
 
-EXPORTS = $(INSTALLED_HEADERS)
+EXPORTS = $(filter-out nanojit/%,$(INSTALLED_HEADERS))
