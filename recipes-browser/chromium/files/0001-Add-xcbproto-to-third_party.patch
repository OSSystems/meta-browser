+	<errorcopy name="BadContext" number="0" ref="Generic" />
+	<errorcopy name="BadContextState" number="1" ref="Generic" />
+	<errorcopy name="BadDrawable" number="2" ref="Generic" />
+	<errorcopy name="BadPixmap" number="3" ref="Generic" />
